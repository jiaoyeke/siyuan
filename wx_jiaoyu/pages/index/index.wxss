/**index.wxss**/
/*轮播图*/
.slider,.slider swiper,.slider image{
  height: 390rpx;
  width: 100%;
}
/* 分割条1 */
.fenge{
  height: 15rpx;
  width: 100%;
  background: #eee;
}
/* 四宫格 */
.index-nav{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  /* height: 110px; */
  box-sizing: border-box;
}
.nav-item{
  width: 25%;
  height: 170rpx;
  display: flex;
  flex-direction: column;  /*垂直排列*/
  justify-content: center;
  align-items: center;
  font-size: 13px;
}
.nav-item image{
  width: 102rpx;
  height: 102rpx;
}
/* 学校优势 */
.xxys{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 33rpx;
  border-bottom: 1px solid #f0f0f0;
  
}
/* 校车接送 */
.xxys .one,.three{
  color: #999;
}
.xiaoche>.img_l image{
  width: 110rpx;
  height: 110rpx;
  padding: 30rpx;
}
.xiaoche .img_l{
  float:left;
}
.xiaoche .img_r{
  display: flex;
}
.xiaoche .text_shang{
  color: rgb(53, 53, 53);
  font-size: 30rpx;
}
.xiaoche .text_xia{
  font-size: 28rpx;
  color: rgb(136, 136, 136);
  padding: 15rpx;
}
.xiaoche{margin-top: 30rpx;}
/* 名师展示 */
.mszs .item{
  margin: 20rpx 0rpx 20rpx 16rpx;
  border: 1px solid #eee
}
.mszs .item>image{
  width: 240rpx;
  height: 300rpx;
}
.mszs{
  display: flex;
  box-sizing: border-box;
}

.item>view:nth-child(2){
  color: #333;
  font-size: 35rpx;
  padding: 10rpx 0 10rpx 20rpx;
}
.item>view:nth-child(3){
  color: #999;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
/* 校园风采 */
.xyfc_item>image{
  width: 350rpx;
  height: 200rpx;
}
.xyfc{
  display: flex;
  flex-flow: row wrap;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
}
.xyfc_item{
  padding: 20rpx 0 12rpx 18rpx
}
.xyfc_item>view:nth-child(2){
  color: #333;
  font-size: 30rpx;
  padding-left: 20rpx;
}
